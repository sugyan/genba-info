<h3>情報詳細</h3>
<%= react_component "SourceDescription", @source.serializable_hash.merge(
  created_at: @source.created_at.strftime('%Y-%m-%d %H:%M:%S'),
  updated_at: @source.updated_at.strftime('%Y-%m-%d %H:%M:%S'),
  start_at: @source.start_at.strftime('%Y-%m-%d %H:%M'),
) %>
<%= react_component "Links", {
  links: [
    {
      href: editor_new_genba_path(@source),
      text: "この情報を元に現場を登録する",
      classes: ["btn", "btn-primary"],
    },
  ],
} %>
<hr>
<%= react_component "Links", {
  links: [
    {
      href: editor_sources_path,
      text: "一覧へ戻る",
    },
  ],
} %>
