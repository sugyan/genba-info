  idol: @idol,
  action: editor_idol_path(@idol),
  method: :patch,
  token: form_authenticity_token,
  errors: @idol.errors.to_hash(true),
  submit: "更新",
} %>
<hr>
<%= react_component "Links", {
  links: [
    {
      href: editor_idol_path(@idol),
      text: "詳細",
    },
